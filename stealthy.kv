#:kivy 1.9.0

<Player>:
    pos: self.pos
    triangleImage: theImage
    height: 15
    width: 15
    Image:
        id: theImage
        source: 'player.png'
        size: self.parent.size
        pos: self.parent.pos
        canvas.before:
            PushMatrix
            Rotate:
                axis: (0, 0, 1)
                angle: self.parent.rotation
                origin: self.center
        canvas:
            Color:
                rgba: 1,0,0,.5
            Line:
                rectangle: self.x, self.y, self.width, self.height
        canvas.after:
            PopMatrix

<Bullet>:
    canvas.before:
        PushMatrix
        Rotate:
            axis: (0, 0, 1)
            angle: self.rotation
            origin: self.rotcenter
    canvas:
        Line:
            points: self.points
    canvas.after:
        PopMatrix


<StealthyGame>:
    player: player_avatar

    Player:
        id: player_avatar
        center: self.parent.center